BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX=$4


curl -sL https://nodejs.org/dist/v14.18.0/node-v14.18.0-linux-x64.tar.xz --output "$BUILD_DIR/node-v14.18.0-linux-x64.tar.xz"  > /dev/null
tar xf $BUILD_DIR/node-v14.18.0-linux-x64.tar.xz --directory $BUILD_DIR
mv $BUILD_DIR/node-v14.18.0-linux-x64 $BUILD_DIR/node
export PATH="$PATH:$BUILD_DIR/node/bin"
cd $BUILD_DIR && npm run build
